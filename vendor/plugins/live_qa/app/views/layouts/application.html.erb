<!DOCTYPE html>
<html>
  <head>
    <title>Live Q&A</title>
    <%= stylesheet_link_tag :all %>
    <%= stylesheet_link_tag "/themes/default/_css/style.css" %>
    <%= stylesheet_link_tag "/javascripts/jquery-ui-1.8.9.custom/css/smoothness/jquery-ui-1.8.9.custom.css" %>
		
		
    <%= javascript_include_tag "jquery-1.6.1" %>
    <%= javascript_include_tag "jquery-ui-1.8.9.custom/js/jquery-ui-1.8.9.custom.min.js" %>
		<%= javascript_include_tag "jquery.html5_form_custom" %>
    <%= javascript_include_tag "chat" %>
		<%= javascript_include_tag "chat_live" if @chat && @chat.on_air? %>
  </head>

  <body>
    <div id="page">
      <div id="header">
        <h1>Live Q&A</h1>
      </div>
      <div id="content">
        <%= yield %>
      </div>
      <div id="footer">
        Live Q&A
      </div>
    </div>
  </body>


	<% if Rails.env.development? %>
	  <%= render :partial => "/shared/grid" if params[:grid] == "true" %>	  
	<% end %>
</html>