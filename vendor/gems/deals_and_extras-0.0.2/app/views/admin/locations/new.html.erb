<%= form_for [:admin, @location] do |f| %>
    <table>
        <tr>
            <td><%= f.label :description %></td>
            <td><%= f.text_field :description, {:class => 'text long'} %></td>
        </tr>
        <tr>
            <td><%= f.label :location_type_id %></td>
            <td><%= f.select :location_type_id, LocationType.OPTIONIZE, {:class => 'drop', :include_blank => true} %> </td>
        </tr>
        <tr>
            <td><%= f.label :latitude %></td>
            <td><%= f.text_field :latitude, {:class => 'text long'} %> </td>
        </tr>
        <tr>
            <td><%= f.label :longitude %></td>
            <td><%= f.text_field :longitude, {:class => 'text long'} %> </td>
        </tr>
        <tr>
            <td><%= f.label :city %></td>
            <td><%= f.text_field :city, {:class => 'text long'} %> </td>
        </tr>
        <tr>
            <td><%= f.label :state_province_id %></td>
            <td><%= f.select :state_province_id, StateProvince.OPTIONIZE, {:class => 'drop', :include_blank => true} %> </td>
        </tr>
        <tr>
            <td><%= f.label :country_id %></td>
            <td><%= f.select :country_id, Country.OPTIONIZE, {:class => 'drop', :include_blank => true} %> </td>
        </tr>

    </table>
    <%= submit_tag @location.id ? 'update' : 'add', {:class => 'button'} %>
<% end %>