<% form_for [:admin, @supplier_user] do |f| %>

    <table>
        <tbody>
            <tr>
                <td><%= f.label :email %></td>
                <td><%= f.text_field :email %></td>
            </tr>
            <tr>
                <td><%= f.label :password %></td>
                <td><%= f.password_field :password %>
            </tr>
            <tr>
                <td><%= f.label :password_confirmation %></td>
                <td><%= f.password_field :password_confirmation %>
            </tr>
            <tr>
                <td><%= f.label :supplier_id %></td>
                <td><%= f.select :supplier_id, options_from_collection_for_select(Supplier.all, 'id', 'supplier_name', @supplier_user.supplier_id), {:include_blank => true} %></td>
            </tr>
        </tbody>
    </table>

    <%= submit_tag 'Update', {:class => 'button'} %>

<% end %>