<% content_for(:title, "Upload Favicon") -%>
<% form_for :asset, :url => update_favicon_site_admin_path, :html => { :multipart => true, :method => :put } do |f| -%>
	<p>Click browse to find an image on your computer. Your new image will appear after you click the save button below. Please only use .ico files.</p>
	<p>
		We will automatically resize your logo to fit in the 16x16 standard favicon size.
	</p>
	<dl>
		<dd><%= f.file_field :uploaded_data %></dd>
	</dl>
	<div class="buttons">
		<input type="submit" name="commit" value="Upload" class="button medium">
		<input type="button" name="reset" value="Cancel" class="button light medium close">
	</div>
<% end -%>