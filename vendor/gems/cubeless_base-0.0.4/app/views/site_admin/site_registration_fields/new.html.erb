<h2>New Registration Field</h2>

<% form_for(:site_registration_field, @site_registration_field, 
						:url => site_admin_site_registration_fields_path,
						:html => {:class => "admin_form"}, 
						:builder => AdminFormBuilder) do |f| %>

	<%= render :partial => "form", :locals => {:f => f} %>
	<%= f.hidden_field :position, :value => SiteRegistrationField.count+1 %>
  
	<div class="buttons">
    <%= f.submit "Create", :class => "button" %>
		<input type="submit" name="reset" value="Cancel" class="button light">
  </div>
<% end %>


