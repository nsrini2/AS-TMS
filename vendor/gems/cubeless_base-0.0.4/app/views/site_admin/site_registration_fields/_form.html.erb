<%= f.error_messages %>
<fieldset>
	<dl class="admin_details">
    <%= f.label :label %>
    <%= f.text_field :label %>

    <%= f.label :required %>
    <%= f.check_box :required %>
    
    <%= f.label :has_options, "Specify Options" %>
    <%= f.check_box :has_options, { :checked => @site_registration_field.has_options }  %>
    
    <div id="site_registration_field_options_container" style="<%= "display:none;" if !@site_registration_field.has_options %>">
      <%= f.label :options, "Options" %>
      <dd>
        <p>Each option should be on its own line</p>
      </dd>
      <%= f.text_area :options %>
    </div>
    
    <%= f.label :site_profile_field_id, "Tie to Profile" %>
    <%= f.select :site_profile_field_id, SiteProfileField.all.collect{ |spf| [spf.label, spf.id] }, {:include_blank => "---- NONE ----"}  %> 
  </dl>
</fieldset>