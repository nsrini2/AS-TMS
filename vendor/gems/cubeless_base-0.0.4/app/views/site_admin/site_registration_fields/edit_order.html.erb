<h2>Editing Registration Field Ordering</h2>

<% form_for(:site_registration_field, @site_registration_field, 
						:url => reorder_site_admin_site_registration_fields_path,
						:html => {:class => "admin_form", :method => :post}, 
						:builder => AdminFormBuilder) do |f| %>

	<dl class="admin_details">
		<% @site_registration_fields.each do |srf| %>
			<%= f.label srf.label %>
			<%= f.text_field :position, :value => srf.position, :name => "categories[#{srf.id}]" %>
		<% end %>
	</dl>
  
	<div class="buttons">
    <%= f.submit "Save", :class => "button" %>
		<input type="submit" name="reset" value="Cancel" class="button light">
  </div>
<% end %>

