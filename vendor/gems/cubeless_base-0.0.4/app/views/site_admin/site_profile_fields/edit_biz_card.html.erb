<h2>Editing Biz Card</h2>

<% form_for(:site_profile_field, @site_profile_field, 
						:url => update_biz_card_site_admin_site_profile_fields_path,
						:html => {:class => "admin_form", :method => :post}, 
						:builder => AdminFormBuilder) do |f| %>

	<h3>Fields with a '0' (zero) will NOT show up on the biz card</h3>

	<dl class="admin_details">
		<% @stuck_biz_card.each_with_index do |spp, idx| %>
			<dt><%= spp.label %><dt>
			<dd><%= idx + 1 %> (immovable)</dd>
		<% end %>
		
		<% @site_biz_card.each_with_index do |spp, idx| %>
			<%= f.label spp.label %>
			<%= f.text_field :biz_card_position, :value => spp.biz_card_position+2, :name => "fields[#{spp.site_biz_card.id}]" %>
		<% end %>
		
		<% @out_biz_card.each_with_index do |opp, idx| %>
			<%= f.label opp.label %>
			<%= f.text_field :biz_card_position, :value => 0, :name => "fields[#{opp.site_biz_card.id}]" %>
		<% end %>
	</dl>
  
	<div class="buttons">
    <%= f.submit "Update", :class => "button" %>
		<input type="submit" name="reset" value="Cancel" class="button light">
  </div>
<% end %>

