<style>
	.admin_form dl.admin_details dt {
		clear: both;
		margin-right: 5px;
		width: 300px;		
	}
</style>

<h2>Editing Question Ordering for <%= @site_profile_question_section.name %></h2>

<% form_for(:site_profile_question_section, @site_profile_question_section, 
						:url => reorder_questions_site_admin_site_profile_question_section_path(@site_profile_question_section),
						:html => {:class => "admin_form", :method => :post}, 
						:builder => AdminFormBuilder) do |f| %>

	<dl class="admin_details">
		<% @site_profile_questions.each do |q| %>
			<%= f.label q.label %>
			<%= f.text_field :position, :value => q.position, :name => "questions[#{q.id}]" %>
		<% end %>
	</dl>
  
	<div class="buttons">
    <%= f.submit "Save", :class => "button" %>
		<input type="submit" name="reset" value="Cancel" class="button light">
  </div>
<% end %>