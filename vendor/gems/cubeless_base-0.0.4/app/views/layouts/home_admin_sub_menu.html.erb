<% content_for(:home_admin_tab_selected, 'selected') -%>

<% content_for :admin_tabs_submenu do %>
  <% admin_links = [
		sub_menu_li_for(marketing_messages_admin_path, :text => 'Marketing Message'),
		sub_menu_li_for(activity_stream_messages_admin_path, :text => 'Activity Stream Message'),
  	sub_menu_li_for(rss_feeds_admin_path, :text => 'RSS Feeds'),
  	sub_menu_li_for(system_announcement_admin_path, :text => 'System Announcement'),
  	sub_menu_li_for(welcome_note_admin_path, :text => 'Welcome Note'),
  	sub_menu_li_for(welcome_email_admin_path, :text => 'Welcome Email'),
  	sub_menu_li_for(widgets_path, :text => 'Hub Widgets<HR>', :selected => (params[:controller].to_s == "widgets" || params[:controller].to_s == "default_widgets")),
  	sub_menu_li_for(about_us_admin_path, :text => 'About Us'),
  	sub_menu_li_for(terms_and_conditions_admin_path, :text => 'Terms and Conditions'),
  	sub_menu_li_for(mass_mail_path, :text => 'Send Community Email', :selected => (params[:controller] == "mass_mail" && params[:action] == "success")), 
