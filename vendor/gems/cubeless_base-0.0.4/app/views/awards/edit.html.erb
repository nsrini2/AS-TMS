<% content_for(:page_title, "Edit award") -%>
<% form_for @award, :html => { :multipart => true } do |f| -%>
<fieldset>
	<h3>Award Details</h3>
	<dl class="award_details">
		<dt class="title"><label for="award_title">Title</label></dt>
		<dd class="title"><%= f.text_field :title, :size => nil, :tabindex => 1, :maxlength => '256' -%></dd>
		<dt><label>Photo</label></dt>
		<dd class="photo"><input type="file" name="asset[uploaded_data]" id="asset_uploaded_data" tabindex="2"></dd>
		<dd class="photo"><%= award_image_for(@award, :preview, :height => 60, :width => 60) -%></dd>
	</dl>
	<div class="buttons">
		<input type="submit" name="commit" value="Update Award" class="button large" tabindex="3">
	</div>
</fieldset>
<% end -%>
