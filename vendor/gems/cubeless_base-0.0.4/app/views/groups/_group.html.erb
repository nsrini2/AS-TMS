<%
classname = '' unless defined?(classname)
-%>
<div id="group<%=group.id%>" class="list_item group_item <%= classname -%>">
	<%= primary_photo_for(group, :thumb => :thumb_80, :linkable=>true) %>
	<div class="details">
		<h2><%= link_to(group.name, group_path(group)) -%></h2>
		<p class="founded_on">Founded on <%= pretty_datetime(group.created_at) -%> &nbsp;&ndash;&nbsp; <%= pluralize(group.group_memberships_count, "member", "members") -%> &nbsp;&ndash;&nbsp; <%= "#{group.stat_text} Activity"%></p>
		<p class="description"><%= group.description -%></p>
		<%= action_list_for([
			link_for_group_action group
		]) if owner_content -%>
	</div>
	<div class="action_buttons">
		<% if defined?(invitation) && invitation -%>
			<%= link_to_decline_invitation invitation -%>
			<%= link_to_accept_invitation_for group -%>
		<% end -%>
	</div>
	
</div>