<% content_for(:page_title, "Stats Summary for #{@group.name}") -%>
<% if @group.is_sponsored? %>
<div class="group_stats">
	<div class="stats">
		<h5>Group Talk Stats</h5>
		<dl>
			<dt><strong>Total Group Talk Posts</strong></dt>
			<dd><%= @stats[:total_group_posts] %></dd>
			<dt><strong>Avg. Replies to Group Talk Posts</strong></dt>
			<dd><%= @stats[:average_number_of_replies] %></dd>
			<dt><strong>Most Active Talker</strong></dt>
			<% if @stats[:biggest_talker] %>
				<dd><a href="<%= profile_url(@stats[:biggest_talker]) %>"><%= @stats[:biggest_talker].screen_name %></a></dd>
			<% else %>
				<dd>No one is talking...</dd>
			<% end %>
                        <br/><br/>
		</dl>
	
	</div>

	<div class="stats">
		<h5>Blog Stats</h5>
		<dl>
			<dt><strong>Total Blog Posts</strong></dt>
			<dd><%= @stats[:total_blog_posts] %></dd>
			<dt><strong>Avg. Comments on Blog Posts</strong></dt>
			<dd><%= @stats[:average_number_of_comments] %></dd>
			<dt><strong>Most Commented on Blog Post</strong></dt>
			<% if @stats[:most_commented_on_blog_post] %>
				<dd><a href="<%= blog_post_url(@stats[:most_commented_on_blog_post]) %>"><%= @stats[:most_commented_on_blog_post].title %></a></dd>
			<% else %>
				<dd>No one is commenting...</dd>
			<% end %>
			<dt><strong>Highest Rated Blog Post</strong></dt>
			<% if @stats[:highest_rated_blog_post] %>
				<dd><a href="<%= blog_post_url(@stats[:highest_rated_blog_post]) %>"><%= @stats[:highest_rated_blog_post].title %></a></dd>
			<% else %>
				<dd>No one is rating...</dd>
			<% end %>
			<dt><strong>Most Active Blogger</strong></dt>
			<% if @stats[:biggest_blogger] %>
				<dd><a href="<%= profile_url(@stats[:biggest_blogger]) %>"><%= @stats[:biggest_blogger].screen_name %></a></dd>
			<% else %>
				<dd>No one is blogging...</dd>
			<% end %>
		</dl>
	</div>
</div>

<% else %>
<div class="group_stats">
	<div class="stats">
		<h3>Group Talk Stats</h3>
		<dl>
			<dt><strong>Total Group Talk Posts</strong></dt>
			<dd><%= @stats[:total_group_posts] %></dd>
			<dt><strong>Avg. Replies to Group Talk Posts</strong></dt>
			<dd><%= @stats[:average_number_of_replies] %></dd>
			<dt><strong>Most Active Talker</strong></dt>
			<% if @stats[:biggest_talker] %>
				<dd><a href="<%= profile_url(@stats[:biggest_talker]) %>"><%= @stats[:biggest_talker].screen_name %></a></dd>
			<% else %>
				<dd>No one is talking...</dd>
			<% end %>
		</dl>
	
	</div>

	<div class="stats">
		<h3>Blog Stats</h3>
		<dl>
			<dt><strong>Total Blog Posts</strong></dt>
			<dd><%= @stats[:total_blog_posts] %></dd>
			<dt><strong>Avg. Comments on Blog Posts</strong></dt>
			<dd><%= @stats[:average_number_of_comments] %></dd>
			<dt><strong>Most Commented on Blog Post</strong></dt>
			<% if @stats[:most_commented_on_blog_post] %>
				<dd><a href="<%= blog_post_url(@stats[:most_commented_on_blog_post]) %>"><%= @stats[:most_commented_on_blog_post].title %></a></dd>
			<% else %>
				<dd>No one is commenting...</dd>
			<% end %>
			<dt><strong>Highest Rated Blog Post</strong></dt>
			<% if @stats[:highest_rated_blog_post] %>
				<dd><a href="<%= blog_post_url(@stats[:highest_rated_blog_post]) %>"><%= @stats[:highest_rated_blog_post].title %></a></dd>
			<% else %>
				<dd>No one is rating...</dd>
			<% end %>
			<dt><strong>Most Active Blogger</strong></dt>
			<% if @stats[:biggest_blogger] %>
				<dd><a href="<%= profile_url(@stats[:biggest_blogger]) %>"><%= @stats[:biggest_blogger].screen_name %></a></dd>
			<% else %>
				<dd>No one is blogging...</dd>
			<% end %>
		</dl>
	</div>
</div>
<% end -%>
