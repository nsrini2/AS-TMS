<% content_for(:page_title, "Transfer Ownership of #{@group.name}") -%>

<% if group_owner_or_shady_admin_content(@group)  %>
	
	
	<div id="ownership_transfer">
		<h3>Who should be the new owner of <%= @group.name %>?</h3>
		<p class="help">After transferring ownership, you will remain a moderator of this group.
			You will no longer be able to assign moderators or transfer ownership once you have transferred ownership.
		</p>
		<div class="candidates">
			<form id="candidates_search" method="get" action="">
				<input type="text" id="search" value="search..." class="member_search" onfocus="this.select()" name="q" />
				<input type="submit" class="button small" value="Search" name="commit"/>
			</form>
			<%# @members.each do %>
				<div id="member_list">
					<%= render :partial => 'groups/member', :collection => @members, :locals => {:transfer_ownership => true} %>
				</div>
			<%# end %>
		</div>
	</div>
	
<% end %>