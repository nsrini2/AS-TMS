<% content_for(:page_title, "Post an Announcement for #{@group.name}") -%>
<div class="group_announcement content">
	<h3>Post an Announcement</h3>
	<% form_for @group_announcement, :url => [@group,:announcement] do |f|  -%>
		<p>Modify the content below to update the group announcement on this group's home page.</p>
		<div class="ta">
			<%= f.text_area :content, :rows => nil, :cols => nil, :class => "fckeditor" -%>
		</div>
		<p>Start and end dates are optional.</p>
		<p>If none are given, the announcement will start immediately and run indefinitely.</p>
		<fieldset id="dates">
			<dl>
				<dt><label for="group_announcement_start_date">Start Date</label></dt>
				<dd><input type="text" name="group_announcement[start_date]" id="group_announcement_start_date" value="<%= @group_announcement.start_date.strftime("%B %d, %Y") if @group_announcement.start_date %>" class="datepicker start" tabindex="2"></dd>
			</dl>
			<dl>
				<dt><label for="group_announcement_end_date">End Date</label></dt>
				<dd><input type="text" name="group_announcement[end_date]" id="group_announcement_end_date" value="<%= @group_announcement.end_date.strftime("%B %d, %Y") if @group_announcement.end_date %>" class="datepicker end" tabindex="3"></dd>
			</dl>
		</fieldset>
		
		<div class="buttons">
			<input type="submit" class="large button" value="Save" name="commit" tabindex="4">
			<input type="submit" class="large button light" value="Remove" name="commit" tabindex="5">
		</div>
	<% end -%>
</div>
<div class="group_announcement content">
	<h3>The current content is:</h3>
	<div class="fck_styled">
		<%= @group_announcement.content -%>
	</div>
</div>