<ul class="<%='my_rating' if gallery_photo.user_has_rated %>">
	<% (1..5).each do |i| %>
		<li class="rate rating<%=i%>" title="Rate: <%=i%> out of 5">
			<%= rate_gallery_photo(gallery_photo, i)%>
		</li>
	<% end %>
</ul>
<p class="rating_total">
	<% if gallery_photo.rating_count > 0 %>
		<%= gallery_photo.rating_avg %> rating from <%= pluralize(gallery_photo.rating_count, 'user') %>
	<% else %>
		Rate this photo
	<% end %>
</p>