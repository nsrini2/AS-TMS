<%
content_for(:change_password_tab, 'selected')
content_for(:page_title, 'Change Password')
-%>
<% form_for :user, :html => {:class => "account_settings clean_form"} do |f| -%>
	<div class="instr">
		Need to change your password? Just enter your current password, a new password, confirm the new password and click on the Update button.<br /><br />
		<dl>
			<dt><strong>Password Rules:</strong></dt>
		<% @rules.each do |rule| -%>
			<dd><%= rule -%></dd>
		<% end -%>
		</dl>
	</div>
	
	<fieldset>
		<dl class="clean_details">
			<dt>
				<label>Current Password (Required)</label>
			</dt>
			<dd><%= f.password_field :current_password, :size=>'35'%></dd>
		
			<dt>
				<label>New Password</label>
			</dt>
			<dd><%= f.password_field :password, :size=>'35'%></dd>

			<dt>
				<label>Confirm Password</label>
			</dt>
			<dd><%= f.password_field :password_confirmation, :size=>'35'%></dd>
		</dl>
	
		<div class="buttons">
			<%= submit_button('Update') %>
		</div>
	
	</fieldset>
<% end -%>