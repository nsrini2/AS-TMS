<% content_for(:page_title, "Edit #{@profile.full_name} of #{@profile.sponsor_account.name}") -%>
<h2>Edit Sponsor Member for <%= @profile.sponsor_account.name %> Category</h2>
<% form_for :user, :url => sponsor_member_path(@profile), :html => { :method => :put } do |f| -%>

	<label for="profile_first_name">First Name</label><br/>
	<%= text_field :profile, :first_name, :size=>'32 '-%><br /><br />

	<label for="profile_last_name">Last Name</label><br/>
	<%= text_field :profile, :last_name, :size=>'32', :onblur => "setSN();" -%><br /><br />

	<label for="user_email">Email</label><br/>
	<%= text_field :user, :email, :size=>'32' -%><br /><br />

	<label for="profile_status">Status</label><br/>
	<%= select :profile, :status, [["activate on login", 2], ["active", 1], ["inactive",0], ["delete",-1] ] -%><br /><br />
	<%= check_box :profile, :visible %> <label for="profile_visible" id="visible_label" class="inline">Visible</label>

	<label for="user_login">Login</label><br/>
	<%= text_field :user, :login, :size=>'32' -%><br /><br />

	<label for="profile_screen_name">Screen Name</label><br/>
	<%= text_field :profile, :screen_name, :size=>'32' -%><br /><br />

	<label for="profile_karma_points">Karma</label><br/>
	<%= text_field :profile, :karma_points, :size =>'15' -%><br /><br />

	<%= f.submit "Update User", :class => "button large" %>

<% end -%>
