<% content_for(:page_title, "Set Showcase Text") -%>
<div class="content">
	<h3>Set Showcase Text</h3>
	<% form_for :showcase_text, @showcase_text, :html => {:id => 'showcase_text'} do |f| -%>
		<p class="help">This text will be displayed in the Travel Market Showcase page.</p>
		<fieldset>
			<dl>
				<dt><label>Showcase Text</label></dt>
				<dd><%= f.text_area :text, :maxlength => "500", :rows => nil, :cols => nil %></dd>
			</dl>
		</fieldset>
		<div class="buttons">
			<input type="submit" class="large button" value="Save" name="commit">
			<input type="submit" class="large button light" value="Delete" name="commit">
		</div>
	<% end -%>
</div>
