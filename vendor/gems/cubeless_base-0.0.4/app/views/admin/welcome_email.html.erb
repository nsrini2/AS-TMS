<% content_for(:page_title, "Manage #{params[:action].gsub('_', ' ').titleize}") -%>
	<% form_for :welcome_email, @welcome_email, :html => {:class => 'standard_mailer'} do |f|  %>
	<h3>Set a Welcome Email</h3>
		<p class="help">This will be the welcome email that new members receive when they log in for the first time.</p>
		 <label>Subject</label> 
		<%= f.text_field :subject, :size => 84, :class => "text"  %>
		<%= f.text_area :content, :rows => nil, :cols => nil, :class => 'fckeditor' %>
		<a href="/admin/reset_welcome_email">Reset email text to default</a>
		<div class="buttons">
			<input type="submit" class="large button" value="Save" name="commit" />
			<input type="submit" class="large button light" value="Preview" name="commit" />
		</div>
	<% end %>
 