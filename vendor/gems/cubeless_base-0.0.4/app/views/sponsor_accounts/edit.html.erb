<% content_for(:page_title, "Edit #{@sponsor_account.name} Showcase Account") -%>
<h2>Edit Showcase Category</h2>
<% form_for(:sponsor_account,
	:url => sponsor_account_path(@sponsor_account),
	:html => { :method => :put }) do |f| %>
	<label for="sponsor_account_name">Showcase Category Name</label><br />
	<%= f.text_field :name, :size => 32 %> <br /><br 
	<label for="sponsor_account_groups_allowed">Number of Booths Allowed</label><br />
       	<%= f.text_field :groups_allowed, :size => 32 %><br /><br />
        <label for="showcase_category_image">Showcase Category Image</label><br />
        <%= file_field_tag :sponsor_category_image_file %><br /> <br/>
	<label for="sponsor_account_notes">Notes</label><br />
	<%= f.text_area :notes, :rows => 10, :cols => 40 %><br /><br />
	<%= f.submit "Update #{@sponsor_account.name} Showcase Category" , :class => "button large" %>
<% end %>
