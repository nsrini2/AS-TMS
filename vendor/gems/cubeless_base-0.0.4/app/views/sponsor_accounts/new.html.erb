<% content_for(:page_title, "Create a New Showcase Category") -%>
<% form_for(:sponsor_account,:url => sponsor_accounts_path, :html => {:id => "new_sponsor_account", :multipart => true}) do |f| %>
<fieldset>
	<h2>Create a New Showcase Category</h2>
	<label for="sponsor_account_name">Showcase Category Name</label><br />
	<%= f.text_field :name, :size => 32, :placeholder => "Name of the showcase category" %><br /><br />
	<label for="sponsor_account_groups_allowed">Number of Booths Allowed</label><br />
	<%= f.text_field :groups_allowed, :size => 32, :placeholder => "No. of groups allowed in this category" %><br/><br />
        <label for="sponsor_category_image">Showcase Category Image</label><br />
        <%= file_field_tag :showcase_category_image_file %><br /> <br/>
	<label for="sponsor_account_notes">Notes</label><br/>
	<%= f.text_area :notes, :rows => 10, :cols => 40,:placeholder => "Notes on this showcase category" %><br /><br />
        <div class="buttons">
		<%= f.submit "Create Showcase Category", :class => "button large" %>
        </div>
</fieldset>
<% end %>
