<% content_for(:page_title, "Create a New Sponsor Account") -%>
<h2>Create a New Sponsor Account</h2>
<% form_for(:sponsor_account,
             :url => sponsor_accounts_path) do |f| %>
	<label for="sponsor_account_name">Sponsor Name</label>
	<%= f.text_field :name %>
	<label for="sponsor_account_groups_allowed">Number of Groups Allowed</label>
	<%= f.text_field :groups_allowed %>
	<label for="sponsor_account_notes">Notes</label>
	<%= f.text_area :notes, :rows => "10" %><br /><br />
	<%= f.submit "Create Sponsor Account" %>
<% end %>