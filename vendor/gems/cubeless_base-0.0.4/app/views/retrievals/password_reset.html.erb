<% content_for(:page_title, "#{@user.crypted_password.blank? ? 'Set' : 'Change'} Your Password") -%>
<% form_for :user, :html => {:class => "login"} do |f| -%>
<div id="reset_password">
	<fieldset>
		<h2><%= @user.crypted_password.blank? ? "Set" : "Change" %> Your Password</h2>
		<div class="instr">
			<dl>
				<dt><strong>Password Rules:</strong></dt>
			<% @rules.each do |rule| -%>
				<dd><%= rule -%></dd>
			<% end -%>
			</dl>
		</div>
		<dl>
			<dt><label>New Password</label></dt>
			<dd><input type="password" name="user[new_password]" /></dd>
			<dt><label>Confirm Password</label></dt>
			<dd><input type="password" name="user[new_password_confirmation]" /></dd>
			<input type="hidden" name="auth" value="<%= params[:auth] %>" />
			<input type="hidden" name="id" value="<%= params[:id] %>" />
		</dl>
		<div class="buttons">
			<input type="submit" name="commit" value="Reset" class="button large">
		</div>
	</fieldset>
</div>
<% end -%>