<%= javascript_include_panda_uploader %>

<%#= js_panda_uploader_init(:upload_url => "http://ec2-184-73-111-165.compute-1.amazonaws.com/videos/-1/upload.xml?account_key=SECRET_KEY_FOR_PANDA_API") %>
