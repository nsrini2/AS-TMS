<%= f.error_messages %>

<dl class="form_details">
<%= f.label :title %>
<%= f.text_field :title -%>

<br />

<% if params[:action] == "new" %>
	<dt>
	  <label for="upload_button">File</label>
	</dt>
	<dd>
		<span id="upload_button"></span> 
  	<input type="text" id="upload_filename" disabled="true" />
  </dd>

	<input type="hidden" name="video[panda_video_id]" id="returned_video_id" value="" /> 	

<% else %>
	<div>
		<%= display_video(@video) %>
	</div>
<% end %>

<%= f.label :description -%><br />
<%= f.text_area(:description, 
			:rows => '5', :cols => '100') -%><br> 
<%= f.label :tags %><br />
 
<%= f.text_field :tag_list, :size => '100' -%><br>

					 			
</dl>