<%
content_for(:blog_tab, 'selected')
content_for(:page_title, "Editing: #{@blog_post.title}")
-%>
<% if @owner.is_a?(Group) %>
 
 <%if @group.is_sponsored?%>
  <div id="blog">
	<div id="blog_posts">
		<% if @preview_blog_post -%>
			<%= render :partial => 'blog_posts/blog_post', :locals => { :blog_post => @preview_blog_post, :full_post => true, :classname => 'odd', :preview => true } -%>
		<% end -%>
		<%= render :partial => 'blog_posts/form' -%>
	</div>
</div>
<%else%>
<div id="blog">
	<div id="blog_posts">
		<% if @preview_blog_post -%>
			<%= render :partial => 'blog_posts/blog_post', :locals => { :blog_post => @preview_blog_post, :full_post => true, :classname => 'odd', :preview => true } -%>
		<% end -%>
		<%= render :partial => 'blog_posts/form' -%>
	</div>
	<%= render :partial => 'blogs/side_bar', :locals => { :show_create => false } -%>
</div>
<% end %>

<% else %>
<div id="blog">
	<div id="blog_posts">
		<% if @preview_blog_post -%>
			<%= render :partial => 'blog_posts/blog_post', :locals => { :blog_post => @preview_blog_post, :full_post => true, :classname => 'odd', :preview => true } -%>
		<% end -%>
		<%= render :partial => 'blog_posts/form' -%>
	</div>
	<%= render :partial => 'blogs/side_bar', :locals => { :show_create => false } -%>
</div>
<% end %>
