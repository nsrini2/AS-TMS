	<div class="list_action_button" >
		<%= link_to("Ask a Question", new_companies_question_path) %>
	</div>
<% end -%>

<% content_for(:page_title, 'Questions') -%>
<h2>Questions <%=@questions_title unless @questions_title.nil?%></h2>
