form#email_settings_form { font-size: 14px; }
	form#email_settings_form h3 { margin-top: 15px; color: <%= @theme_colors['primary_color'] %>; }
		form#email_settings_form h3.first { margin-top: 0;}
		form#email_settings_form h4 { margin-top: 10px; }
		form#email_settings_form dl { margin: 5px 15px; }
		form#email_settings_form dt { margin: 10px 10px 5px; font-size: 13px; color: #333;}
		form#email_settings_form dd { margin-left: 15px; }
		form#email_settings_form label { font-weight: normal; font-size: 12px; color: #333; }
		
		form#email_settings_form #profile_summary_email_status_1 { margin-left: 25px; }
  
		form#email_settings_form .buttons { margin-top: 18px; text-align: center; }
		form#email_settings_form div.email_options, { margin-left: 20px; } 
		form#email_settings_form p { margin-left: 15px; }

		form#email_settings_form .group_preferences {width: 350px; float: left; margin-bottom: 10px; }
			#all_groups_preferences, #individual_group_preferences { padding: 0 10px;}
		form#email_settings_form #group_preferences h4 { padding-left: 20px; }
			form#email_settings_form #group_preferences h4.selected { display: block; background: url(/images/messageIconSmall.png) no-repeat 0 3px; position: relative; font-weight: normal; cursor: default; text-decoration: none; color: inherit; }
			
			form#email_settings_form .ui-icon { display: none;}
			form#email_settings_form #group_preferences h4.link { font-weight: normal; cursor: pointer; text-decoration: underline; color: <%= @theme_colors['link_color'] %>; }
		form#email_settings_form #group_preferences .instr { margin-left: 30px; color: #333; }

