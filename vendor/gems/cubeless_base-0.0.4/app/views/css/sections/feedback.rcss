form.feedback { position: relative; margin: 23px 140px; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; <%= border_radius('5px') %> padding: 12px 16px 0; background: <%= @theme_colors['contrast_color'] %>; }
	form.feedback h2 { margin-bottom: 20px; color: <%= @theme_colors['ask_answer_header'] %>; }
	form.feedback p { padding: 0 17px; font-size: 13px; line-height: 1.4em; text-align: justify; }
	form.feedback fieldset { margin: 28px 0 0; padding: 0 16px; }
		form.feedback fieldset dl { clear: both; margin: 0; }
		form.feedback fieldset dl.name { float: left; clear: none; width: 230px; }
		form.feedback fieldset dl.email { float: right; clear: none; width: 230px; }
			form.feedback fieldset dl dt { margin: 0; padding-bottom: 3px; font-weight: bold; }
			form.feedback fieldset dl dd { margin: 0; padding-bottom: 10px; }
				form.feedback fieldset dl.name dd input,
				form.feedback fieldset dl.email dd input { width: 218px; }
				form.feedback fieldset dl dd.subject input { width: 476px; }
				form.feedback fieldset dl dd.body textarea { width: 475px; height: 150px; }
		form.feedback fieldset div.buttons { margin: 10px 0 20px; text-align: center; }