/* admin */
#admin { padding: 10px 0 0 0; }
	<%= clear_after('#admin') %>
	#admin h3 { color: <%= @theme_colors['primary_color'] %>; margin: 0 0 5px 0; }
	#admin p.help { font-size: 11px; margin-bottom: 5px; color: #555; }
	#admin span.highlight { background-color: #FFFED0 }
	#admin .content { }
		<%= clear_after('#admin .content') %>
		#admin .content .ta { margin: 10px 0; }
		#admin .content .ta textarea { width: 595px; }
		#admin label { display: block; font-weight: bold; margin-top: 5px; clear: left; }
		#admin label.inline { display: inline; }
		#admin table tr td.bottom_align { vertical-align: bottom; }
		#admin div.half_width { float: left; width: 47%; margin-right: 2%; }
			#admin div.half_width textarea { width: 340px; height: 60px; }

	#admin .form_section { padding: 0 10px 0 0; float: left; }
	#admin .form_section_right { padding: 0 10px 0 0; float: right; }
	#admin #frame { position: absolute; left: -9999px; width: 1px; height: 1px; border: 0px; }
	#admin table td.count { text-align: center; }

	/* stats */
	
	#stats_by_date fieldset dl { margin: 0; margin-left: 0; float: left; }
		#stats_by_date fieldset dt { margin-left: 0; margin-right: 10px; }
		#stats_by_date fieldset dd { margin-left: 0; margin-right: 10px; }
	#stats_by_date fieldset .buttons { float: left; padding-top: 17px; }


	/* content management */
	table#admin_marketing td { padding: 3px 10px; vertical-align: middle; }
	table#admin_marketing th, table#admin_marking td { text-align: center; }
	table#admin_marketing .link { width: 340px; text-align: left; }
	table#admin_marketing .link .in_place_editor_field { display: block; }
	#upload_new { margin: 20px 0 20px 10px; font-weight: bold; }
	
	div.content div.buttons { padding: 10px 0; }
		div.content div.buttons input.button { display: inline; margin-right: 10px; }

	div.content_management { padding: 0 0 10px; width: 595px; overflow: hidden; }
		div.content_management h3 { color: <%= @theme_colors['primary_color'] %>; margin: 0 0 10px 0; }
			div.content_management form p { font-size: 11px; margin-bottom: 5px; color: #555; }
		div.content_management div.ta { height: 200px; }
				div.content_management fieldset#dates dl { margin: 0; margin-left: 0; float: left; }
					div.content_management fieldset#dates dt { margin-left: 0; margin-right: 10px; font-weight: bold; color: #333; }
					div.content_management fieldset#dates dd { margin-left: 0; margin-right: 10px; }
					
	
	div.content #welcome_form { width: 300px; float: left; }
		div.content #welcome_form label { color: #333; }
		div.content #welcome_form dl { margin: 0; margin-left: 0; float: left; }
			div.content #welcome_form dt { margin-left: 0; margin-right: 10px; font-weight: bold; color: #333; }
			div.content #welcome_form dd { margin-left: 0; margin-right: 10px; }
	div.content #welcome_note_text, div.content #welcome_note_name { width: 300px; }
	/* D0X00109=CSJ - Deprecate jes 112009 */
	div.content img.welcome, div.content img.bambo { float: right; } 
	/* D0X00109=CSJ - Deprecate jes 112009 */


	div.welcome_email { width: 100%; }
		div.content #welcome_email_form { float: left; width: 550px; }
		
		div.content #welcome_email_form dl { margin: 0; margin-left: 0; float: left; }
			div.content #welcome_email_form dt { margin-left: 0; margin-right: 10px; font-weight: bold; color: #333; }
			div.content #welcome_email_form dd { margin-left: 0; margin-right: 10px; }
	
	div#admin div.default_widget, div#admin div.about_us, div#admin div.terms_and_conditions { padding: 0 0 10px; }
			div.default_widget textarea { width: 550px;}
			
	#admin #mass_mailer { display:block; width: 745px;}
		#admin #mass_mailer h3 { margin: 0 0 8px 0; color: <%= @theme_colors['primary_color'] %>; }
		#admin #mass_mailer label { color: #333; }
		#admin #mass_mailer textarea { width: 735px; height: 330px; }
		#admin #mass_mailer div.buttons { padding: 10px 0; }
		#admin #mass_mailer .text { width: 730px; margin-bottom:10px; padding: 3px; font-size: 12px; }
		#admin #mass_mailer .button { margin-right:10px; }

		#admin .standard_mailer { display:block; width: 745px;}
			#admin .standard_mailer h3 { margin: 0 0 8px 0; color: <%= @theme_colors['primary_color'] %>; }
			#admin .standard_mailer label { color: #333; }
			#admin .standard_mailer textarea { width: 735px; height: 330px; }
			#admin .standard_mailer div.buttons { padding: 10px 0; }
			#admin .standard_mailer .text { width: 730px; margin-bottom:10px; padding: 3px; font-size: 12px; }
			#admin .standard_mailer .button { margin-right:10px; }
			
		#admin .user_input_frame { display:block; width: 745px;}
		    #admin .user_input_frame h3 { margin: 0 0 8px 0; color: <%= @theme_colors['primary_color'] %>; }
			#admin .user_input_frame label { color: #333; }
			#admin .user_input_frame textarea { width: 735px; height: 330px; }
			#admin .user_input_frame div.buttons { padding: 10px 0; }
			#admin .user_input_frame .text { width: 730px; margin-bottom:10px; padding: 3px; font-size: 12px; }
					#admin .user_input_frame .button { margin-right:10px; }	
			
	/* shady */
	
	#shady_history fieldset dl { margin: 0; margin-left: 0; float: left; }
		#shady_history fieldset dt { margin-left: 0; margin-right: 10px; }
		#shady_history fieldset dd { margin-left: 0; margin-right: 10px; }
	#shady_history fieldset .buttons { float: left; padding-top: 17px; }

	/* user setup */
	form#users_search { margin-bottom: 18px; }
		<%= clear_after('form#users_search') %>
		form#users_search input.button { margin-top: 14px; }

	div#upload_users { width: 50%; float: left; }
		div#upload_users .form_section { float: none; }
		div#upload_users input.checkbox { margin-top: 10px; }
		form#upload_users_form { width: 430px; margin-top: 10px; }
			<%= clear_after('form#upload_users_form') %>
	div#sidebar { float: right; width: 40%; padding-left: 10px; border-left: 1px solid <%= @theme_colors['primary_color'] %>; }
		<%= clear_after('div#sidebar') %>
		div#sidebar ul { margin: 0 0 5px 5px; }
		div#sidebar h3 { margin-bottom: 5px; }
	
	
/* admin awards */
#admin_award_list { margin: 15px 0 0; width: 550px; }
	#admin_award_list .award { position: relative; width: 500px; padding: 10px; clear: both; <%= border_radius('5px') %> }
		#admin_award_list .award_thumbnail { float: left; margin-right: 8px; width: 50px; }
		#admin_award_list .details { float: left; width: 400px; }
			#admin_award_list .details h3 { margin: 0; width: 400px; }
			#admin_award_list .recipients { margin: 5px 0 0 5px; list-style-type: none; }
				#admin_award_list .recipients li { padding: 5px 0; }
				#admin_award_list .recipients .photo_wrapper { margin: 0 5px 0 0; }

form.new_award h3, form.edit_award h3 { color: <%= @theme_colors['primary_color'] %>; margin: 0; }
	form.new_award fieldset, form.edit_award fieldset { width: 500px; margin: 15px 0; padding: 15px; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; background: <%= @theme_colors['contrast_color'] %>; line-height: 1.3em; text-align: left; overflow: auto; <%= border_radius('5px') %> }
dl.award_details { margin: 10px; }
	dl.award_details .counter { margin: 0 35px 0 0; }
	dl.award_details dt { display: block; float: left; margin: 0 0 18px 0; padding-top: 3px; width: 75px; text-align: right; }
		dl.award_details dt label { font-size: 12px; color: #333; }
	dl.award_details dd { margin: 0 0 18px 90px; }
		dl.award_details dd input { padding: 3px; font-size: 12px; width: 350px; }
		dl.award_details dd textarea { padding: 3px; font-size: 12px; width: 350px; }
			form.edit_award dl.award_details dd.photo { margin-bottom: 0; }
			dl.award_details dd.photo input { display: block; }
			dl.award_details dd.photo img { margin-top: 10px; display: block; }
		dl.group_details dd span.counter { margin-right: 31px; }
	form.new_award div.buttons, form.edit_award div.buttons { margin-left: 100px; }
		form.new_award div.buttons input, form.edit_award div.buttons input { margin-right: 10px; }

		.assign_award .buttons input { width: auto; padding: 0 5px; }

/* manage users */
#user_setup {  }
	#user_setup h3 { color: <%= @theme_colors['primary_color'] %>; margin: 0 0 5px 0; }
		#user_setup #user_search_form_and_results #profile_results { clear: both; }

form#user_setup_form { margin: 0 0 15px; padding: 15px 0; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; background: <%= @theme_colors['contrast_color'] %>; line-height: 1.3em; text-align: left; overflow: hidden; <%= border_radius('5px') %> }
form#user_setup_form fieldset { float: left; display: inline; }
	form#user_setup_form h3 { margin: 0 10px; }
form#user_setup_form dl.user_details { margin: 10px; }
	form#user_setup_form dl.user_details dt { display: block; float: left; margin: 0; padding-top: 3px; width: 85px; text-align: right; }
		form#user_setup_form dl.user_details dt label { font-size: 12px; color: #333; margin: 0; }
	form#user_setup_form dl.user_details dd { margin: 0 0 18px 95px; }
		form#user_setup_form dl.user_details dd input { padding: 3px; font-size: 12px; width: 250px;}
			form#user_setup_form dl.user_details dd.checkbox input { width: 15px; }
		form#user_setup_form dl.user_details dd textarea { padding: 3px; font-size: 12px; width: 250px; }
		form#user_setup_form dl.user_details dd select { width: 150px; }
			/* Need to override the #profile_status css */
			select#profile_status {
			  border-left: inherit ! important;
			  margin-left: 0 ! important;
			  min-height: 0 ! important;
			  padding-left: 0 ! important;
			}
		form#user_setup_form dl.user_details dd.number input { width: 50px; }
		form#user_setup_form div.buttons { margin-left: 110px; clear: left; }
			form#user_setup_form div.buttons input { margin-right: 10px; }

/* content management */
#admin_marketing {  }
	#admin_marketing p { margin-bottom: 0; }

	div.content_management textarea#object_content { width: 595px; height: 200px; }
	textarea#welcome_email_content { width: 575px; height: 300px; }
	div.about_us textarea#object_content,
	div.terms_and_conditions textarea#object_content { width: 785px; height: 300px; }

/* sponsors */
.sponsor_admin div.container { overflow: hidden; }
.sponsor_admin h2 { margin-bottom: 5px; }
	.sponsor_admin h2 a, .sponsor_admin h3 a { font-size: .7em; }
.sponsor_admin h3, .sponsor_admin h4 { margin-top: 15px; }
	.sponsor_admin h4 a {font-size: .8em; }
.sponsor_admin h5 { margin-top: 10px; }
	.sponsor_admin h5 input {font-weight: normal; }


div.sponsor_account, div.sponsor_account_sponsor, div.sponsor_account_group { margin: 8px; padding: 10px; border: 1px solid #ccc; width: 355px; }
div.sponsor_account_even, div.sponsor_account_sponsor_even, div.sponsor_account_group_even { float: right; clear: right; }
div.sponsor_account_odd, div.sponsor_account_sponsor_odd, div.sponsor_account_group_odd { float: left; clear: left; }
	div.sponsor_account h3, div.sponsor_account_sponsor h3, div.sponsor_account_group h3 { margin-top: 0; }