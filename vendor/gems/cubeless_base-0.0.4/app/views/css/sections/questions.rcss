/* Explore */
#explore form#query_form { margin: 15px 0 10px 0; }


/* Answer */
form#answer_form { margin: 10px; padding: 12px 16px 0; }
	form#answer_form h2 { margin: 0; color: <%= @theme_colors['primary_color'] %>;}
	form#answer_form textarea { width: 700px; height: 70px; margin: 0 auto; color: #333; font-size: 12px; overflow: hidden; }
	form#answer_form label, form#answer_form textarea { margin: 0 auto; display: block; }
	form#answer_form textarea { padding: 5px; }
		form#answer_form label > span { float: right; margin: 0 10px; font-weight: bold; }
	form#answer_form div.buttons { margin: 18px auto; text-align: center; vertical-align: baseline; }
	form#answer_form div.buttons img { position: relative; top: 5px; }