h1.reporting {
  margin-bottom: 0px;
}
#admin h2.reporting label {
  display: inline;
}
h2.reporting select {
  font-size: 0.8em;
  margin-top: 0px;
  vertical-align: top;
}
h3.reporting {
  margin-bottom: 0px;
}
div#draggables_container {
  float: right; 
  width: 210px;
}
div#draggables_container h3{
	margin-bottom: 0px;
}
div.accordion_draggable_container {
  /*We have to make the overflow visible to allow elements to be dragged out of the accordion*/
  overflow: visible ! important; 
}
span.report_draggable {
  cursor: pointer
}
.report_droppable {
  border: 2px dotted #adadad;
  margin-bottom: 10px;
  padding: 2px 5px; 
  width: 550px; 
}
.report_droppable_over {
  background: <%= Config[:themes][Config[:theme]]['contrast_color'] %>;
}

div.buttons a.button {
  padding: 3px;
}

#report_preview table {
  border-collapse: collapse;
  width: 560px;
}
#report_preview table th {
  background: #cecece;
  padding: 2px 5px;
  text-align: left;
  text-transform: capitalize;
}
#report_preview table tr {
  border: 1px solid #3d3d3d;
}
#report_preview table td {
  padding: 2px 5px;
}
hr.reports_divider {
  margin: 25px 0 20px 0;
  width: 560px;
}