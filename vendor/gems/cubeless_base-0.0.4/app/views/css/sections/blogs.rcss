#blog {  }
	#blog ul.blog_actions { float: right; }
	#blog_posts { float: left; width: 609px; }
	#blog_meta { float: left; margin: 0 0 25px 17px; padding: 15px; <%= border_radius('5px') %> width: 138px; background-color: <%= @theme_colors['contrast_color'] %>; display: inline; }
		#blog_meta h4 { margin-top: 0; }
		#blog_meta ul { margin-bottom: 18px; }
			#blog_meta ul li { margin: 0 0 3px; line-height: 1.1em; }
		#blog_meta .photo_wrapper { float: left; margin: 4px 4px 0 0; }

	#blog_posts div.blog_post_item {  }
		#blog_posts div.blog_post_item div.details { width: 575px; }
			#blog_posts div.blog_post_item div.details h3,
			#blog_posts div.blog_post_item div.details p.meta { margin-right: 110px; }

		#blog_posts div.blog_post_item #comments { clear: both; padding: 25px 15px 0; }
			#blog_posts div.blog_post_item #comments h4 { font-size: 13px; margin-bottom: 12px; }
			#blog_posts div.blog_post_item #comments form { margin-bottom: 18px; <%= border_radius('5px') %> padding: 18px; background: <%= @theme_colors['contrast_color'] %>; }
				#blog_posts div.blog_post_item #comments form h5 { margin: 0 0 8px; font-size: 12px; }
				#blog_posts div.blog_post_item #comments form p.error { font-weight: bold; color: #f00; }
				#blog_posts div.blog_post_item #comments form fieldset {  }
					#blog_posts div.blog_post_item #comments form fieldset label { display: block; font-weight: bold; }
					#blog_posts div.blog_post_item #comments form fieldset textarea { width: 520px; height: 100px; }
				#blog_posts div.blog_post_item #comments form div.buttons {  }
					#blog_posts div.blog_post_item #comments form div.buttons input.button { display: inline; margin-right: 10px; }

			#blog_posts div.blog_post_item #comments div.comment_item {  }
			#blog_posts div.blog_post_item #comments div.odd { background: #f0f0f0; }
				#blog_posts div.blog_post_item #comments div.comment_item div.details { margin-left: 0; width: 465px; }
					#blog_posts div.blog_post_item #comments div.comment_item div.details h5 { margin: 3px 0 3px; }
					#blog_posts div.blog_post_item #comments div.comment_item div.details p.meta { margin-bottom: 3px; font-size: 11px; color: #555; }
					#blog_posts div.blog_post_item #comments div.comment_item div.details p.text { margin-bottom: 3px; color: #333; font-size: 12px; line-height: 1.4em; text-align: justify; }

			form#new_blog_post { position: relative; margin: 0 auto; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; <%= border_radius('5px') %> padding: 12px 16px 0; background: <%= @theme_colors['contrast_color'] %>; }
				form#new_blog_post fieldset { margin: 0; }
					form#new_blog_post fieldset h2 { color: <%= @theme_colors['ask_answer_header'] %>; }
					form#new_blog_post fieldset dl { margin: 0; }
						form#new_blog_post fieldset dl dt { padding-bottom: 3px; font-weight: bold; }
						form#new_blog_post fieldset dl dd { margin: 0; padding-bottom: 10px; }
							form#new_blog_post fieldset dl dd textarea { width: 573px; height: 300px; }
							form#new_blog_post fieldset dl dd.title input,
							form#new_blog_post fieldset dl dd.tags input { width: 568px; }
				form#new_blog_post div.buttons { margin: 14px 0 18px; }
					form#new_blog_post div.buttons input.preview { margin-right: 10px; }
					form#new_blog_post div.buttons input.submit { margin-right: 10px; }


div.blog_results {}
	div.blog_results h2.explore_header { float: left; margin: 0; }


