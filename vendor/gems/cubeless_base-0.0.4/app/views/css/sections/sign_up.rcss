form.sign_up { position: relative; margin: 23px 185px; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; <%= border_radius('5px') %> padding: 12px 16px 0; background: <%= @theme_colors['contrast_color'] %>; }
	form.sign_up h2 { margin-bottom: 18px; }
	form.sign_up fieldset { margin: 0 18px; }
		form.sign_up fieldset dl { float: left; margin: 0 26px 0 0; }
			form.sign_up fieldset dl.last_name,
			form.sign_up fieldset dl.login,
			form.sign_up fieldset dl.password_confirmation,
			form.sign_up fieldset dl.right { margin-right: 0; }
			form.sign_up fieldset dl dt { margin: 0; padding-bottom: 3px; font-weight: bold; }
			form.sign_up fieldset dl dd { margin: 0; padding-bottom: 10px; }
					form.sign_up fieldset dl dd div.fieldWithErrors img { margin: -3px 0 0 -25px; position: absolute; }
				form.sign_up fieldset dl dd input { width: 175px; }
	form.sign_up div.buttons { margin: 8px 0 18px; text-align: center; }