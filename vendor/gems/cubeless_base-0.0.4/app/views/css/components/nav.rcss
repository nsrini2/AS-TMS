#nav { position: relative; z-index: 4; margin: auto; width: 100%; height: 37px; background: <%= @theme_colors['background_color'] %> url(<%= image("top_hatch.png") %>) no-repeat; }
	#nav ul { position: absolute; margin: 0 0 0 12px; width: 868px; z-index: 7; list-style: none; }
		#nav ul li { float: left; display: inline; position: relative; top: 7px; padding: 0 0 12px; color: #fff; font-weight: bold; text-decoration: none; line-height: 30px; }
		#nav ul li.selected { background: url(<%= global_image("mainNavSelect.png") %>) center bottom no-repeat; }
			#nav ul li a { display: block; padding: 0 30px; color: <%= @theme_colors['menu_text_color'] %>;  text-decoration: none; font-weight: bold; }
			#nav ul li a:hover { text-decoration: underline; }
			#nav ul li.selected a { background: #000; color: #fff; }
		#nav ul li.powered_by { float: right; margin: 2px 30px 0 0; }
			#nav ul li.powered_by a { position: relative; display: block; padding: 0; width: 74px; height: 24px; background: url(<%= global_image("poweredBy.gif") %>) no-repeat; line-height: 1.2; text-indent: -9999px; }