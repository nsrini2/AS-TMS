div.rate { padding: 2px; width: 125px; text-align: right; }
	<%= clear_after('div.rate') %>
	div.rate ul { float: right; position: relative; margin: 0; width: 75px; height: 15px; background: url(/images/rate_dim.png) 0 0 repeat-x; list-style: none; }
	div.rate ul li { float: left; width: 15px; height: 15px; text-indent: 9999px; overflow: hidden; }

		div.rate ul li a { position: absolute; top: 0; left: 0; height: 15px; text-indent: 9999px; overflow: hidden; }

		div.rate ul li a:hover,
		div.rate ul:hover li a.selected:hover,
		div.rate ul.rate_hover li a.selected:hover,
		div.rate ul.rate_hover_my_rating li a.selected:hover { background: url(/images/rate.png) 0 0 repeat-x; }
		div.rate ul li a.selected { background: url(/images/rate_rated.png) 0 0 repeat-x; }
		div.rate ul li.rated { background: url(/images/rate_rated.png) 0 0 repeat-x; }

		div.rate ul.my_rating li a:hover,
		div.rate ul.my_rating li a.selected { background: url(/images/rate.png) 0 0 repeat-x; }

		div.rate ul:hover li a.selected,
		div.rate ul.rate_hover li a.selected,
		div.rate ul.rate_hover_my_rating li a.selected { background: none; }

		div.rate ul li.rating1 a { width: 15px; z-index: 15; }
		div.rate ul li.rating2 a { width: 30px; z-index: 14; }
		div.rate ul li.rating3 a { width: 45px; z-index: 13; }
		div.rate ul li.rating4 a { width: 60px; z-index: 12; }
		div.rate ul li.rating5 a { width: 75px; z-index: 11; }

	div.rate p.rating_total { clear: both; margin-right: 1px; padding-top: 2px; font-size: 1em; text-align: right; }