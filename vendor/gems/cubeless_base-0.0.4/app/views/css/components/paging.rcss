div.pagination { margin: 20px 0 0; padding: 0; font-size: 16px; text-align: center; position: relative; }
		div.pagination a, div.pagination span { display: inline; list-style-type: none; <%= border_radius('3px') %>}
			div.pagination a, 
			div.pagination a:visited { border: 1px solid #888; padding: 0 5px; color: #888; font-weight: bold; text-decoration: none; }
			div.pagination a:hover, 
			div.pagination a:active { border: 1px solid #000; background-color: #ddd; color: #000; }
		div.pagination span.currentpage { font-weight: bold; border: 1px solid #000; <%= border_radius('3px') %> padding: 0 5px; background-color: <%= @theme_colors['primary_color'] %>; color: #fff; }
		div.pagination span.disablepage { display: none; }
		div.pagination span.nextpage { font-weight: bold; }