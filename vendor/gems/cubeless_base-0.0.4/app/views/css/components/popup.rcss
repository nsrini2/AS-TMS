/* link that fires a modal/popup */
a.modal { padding-right: 10px; background: url(/images/overlay.gif) right 60% no-repeat; }

/* popup styles */
.popup { width: 425px; border: 3px solid <%= @theme_colors['primary_color'] %>; padding: 0; background: <%= @theme_colors['primary_color'] %>; zoom: 1; }
	.popup .ui-dialog-titlebar { display: none; }
	.popup .ui-dialog-content { position: relative; padding: 16px; border: 1px solid #000; <%= border_radius('5px') %> background: #ff9; }
		.popup .ui-dialog-content h3 { margin-top: -5px; margin-bottom: 18px; }
		.popup .ui-dialog-content a.close { position: absolute; top: 13px; right: 20px; color: <%= @theme_colors['link_color'] %>; font-weight: bold; }
		.popup .ui-dialog-content img.icon { float: left; margin-right: 12px; }

/* form popup styles */
.form_popup {  }
	.form_popup .ui-dialog-content {  }
		.form_popup .ui-dialog-content form {  }
			.form_popup .ui-dialog-content form dl { margin: 0; }
				.form_popup .ui-dialog-content form dl dt { margin-bottom: 2px; font-weight: bold; }
				.form_popup .ui-dialog-content form dl dd { margin: 0 0 5px; }
					.form_popup .ui-dialog-content form dl dd textarea { width: 383px; height: 75px; }
			.form_popup .ui-dialog-content form div.buttons { margin: 12px 0 0; text-align: center; }
				.form_popup .ui-dialog-content form div.buttons input { display: inline; margin: 0 5px; }

