/* notice and error dialogs */
#flash_notice { display: none; }
.notice_dialog { border: 1px solid #4cab07; <%= box_shadow('2px 2px 3px #888') %> padding: 5px; width: 500px; font-size: 12px; }
	.notice_dialog #flash_notice { display: block; }
	.notice_dialog .ui-dialog-titlebar { display: none; }
	.notice_dialog .ui-dialog-content { <%= border_radius('5px') %> padding: 3px 10px 3px 80px; background: #d3ffb0 url(<%= global_image("messageIcon.png") %>) 15px 15px no-repeat; }

#flash_error { display: none; }
.error_dialog { border: 1px solid #f00; <%= box_shadow('2px 2px 3px #888') %> padding: 5px; width: 500px; font-size: 12px; }
	.error_dialog #flash_error { display: block; }
	.error_dialog .ui-dialog-titlebar { display: none; }
	.error_dialog .ui-dialog-content { <%= border_radius('5px') %> padding: 3px 10px 3px 80px; background: #fdd9d9 url(<%= global_image("errorIcon.png") %>) 15px 15px no-repeat; }
