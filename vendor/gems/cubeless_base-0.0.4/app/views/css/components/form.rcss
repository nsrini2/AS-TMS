/* Lifted from admin css, .admin_form */ 

.cubeless_form { margin: 0 0 15px; padding: 15px 0; border: 1px solid <%= @theme_colors['ask_answer_border'] %>; background: <%= @theme_colors['contrast_color'] %>; line-height: 1.3em; text-align: left; overflow: hidden; <%= border_radius('5px') %> }
.cubeless_form fieldset { float: left; display: inline; }
	.cubeless_form h3 { margin: 0 10px; }
.cubeless_form dl.form_details { margin: 10px; }
	.cubeless_form dl.form_details dt { display: block; float: left; margin: 0; padding-top: 3px; width: 85px; text-align: right; }
	.cubeless_form dl.form_details dt.checkbox { clear: both; width: 160px; text-align: right; }
		.cubeless_form dl.form_details dt label { font-size: 12px; color: #333; margin: 0; }
	.cubeless_form dl.form_details dd { margin: 0 0 18px 95px; }
		.cubeless_form dl.form_details dd input { padding: 3px; font-size: 12px; width: 250px;}
			.cubeless_form dl.form_details dd.checkbox input { width: 15px; }
		.cubeless_form dl.form_details dd textarea { padding: 3px; font-size: 12px; width: 250px; }
		.cubeless_form dl.form_details dd select { width: 150px; }
		.cubeless_form dl.form_details dd.number input { width: 50px; }
		.cubeless_form div.buttons { margin-left: 110px; clear: left; }
			.cubeless_form div.buttons input { margin-right: 10px; }

