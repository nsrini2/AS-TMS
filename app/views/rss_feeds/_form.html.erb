<%= form_for rss_feed, :html => {:id => 'rss_feed_form'} do |f| -%>
	<p class="help">This will pull RSS Feed content into a blog.</p>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "width: 400px; height: 80px;" %>
  </div>
  <div class="field">
    <%= f.label "Feed URL" %><br />
    <%= f.text_area :feed_url, :style => "width: 400px; height: 80px;" %>
  </div>
  <div class="field">
    <%= f.label :tagline %><br />
    <%= f.text_area :tagline, :style => "width: 400px; height: 80px;" %>
  </div>
  <div class="field">
    <%= f.label :blog_id %> -- the ID of the blog you want to insert the RSS items into as posts<br />
    <%= f.text_field :blog_id %>
  </div>
  <div class="field">
    <%= f.label :profile_id %> -- the ID profile who will be credited with creating these posts<br />
    <%= f.text_field :profile_id %>
  </div>
	<div class="buttons">
		<%= f.submit "Save", :html => {:class =>  "large button", :name => "commit"} %>
	</div>
<% end -%>