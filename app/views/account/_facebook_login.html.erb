<div id="login-agentstream-facebook-main">
	<%= link_to(image_tag("/images/as_177x90.png", :alt => "AgentStream Logo"), home_path )%>
	<div id="public-focus">
		<div id="login-header" class="header">
			<h1>last step:<br />login to agentstream</h1>
		</div>
	
		<div id="agentstream-facebook-login">
			
			<% @user = User.new %>
			<% form_for @user, :url => login_account_path, 
												 :html => { :id => "login_form", :class => "html5", "accept-charset" => "utf-8" } do %>
			  <%= hidden_field(:user, :facebook_id, :value => facebook_uid) if facebook_uid %>
				<input type="text" name="login" placeholder="Login" id="one" /><br/>
			  <input type="password" name="password" placeholder="Password" id="two"/><br/>
				<a href="/retrievals/new">Forgot password or login?</a>
		   	<input class="submit" type="image" src="/images/welcome/AS_LoginButton_blue_6811.gif" name="Login" width="61" height="25"/>
				<br />
			<% end %>
			
		</div>
	</div>
	<div id="fb-root"></div>
	<div style="clear: both;">
		<p id="login-request">
			Need an account?<%= link_to (" register &rsaquo;", signup_account_path )%>
		</p>
	</div>
</div>
<div class="disclaimer">
  <p><%= Config[:disclaimer] -%></p>
</div>