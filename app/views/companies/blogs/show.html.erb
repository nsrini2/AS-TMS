<% content_for :aside do %>
	<%= render :partial => '/companies/blogs/side_bar' -%>
<% end %>

<div id="blog">
	<div id="blog_posts">
		<% @blog_posts.each do |blog_post| -%>
			<%= render :partial => '/blog_posts/blog_post', :locals => { :blog_post => blog_post, :full_post => (@blog_posts.size == 1), :classname => cycle('odd', 'even') } -%>
		<% end -%>
		<% if @blog_posts.empty? -%>
			<div id="no-blog-posts">
				<p><%="No blog posts have been created for #{current_company.name}.  Why not be the first?"%></p>
				<p><%= link_to("Create a company blog post", new_companies_blog_path ) %></p>
			</div>	
		<% end -%>
	</div>
</div>