<% form_for company, :url => url, :html => { :multipart => true, :class => "html5", :id => "company_form", "accept-charset" => "utf-8"} do |f| %>
	<p>
		<%= f.label :name %></br>
	  <%= f.text_field :name, :size => '32', :placeholder => "Name" %><br />
		<%= f.label :description %></br>
	  <%= f.text_area :description, :size => '32', :placeholder => "Description" %><br />
		<%= f.label :photo %></br>
		<%= file_field(:asset, :uploaded_data)%><br />
		<%= primary_photo_for(company, :thumb => :thumb) %><br />
		<%#= f.label :owner_profile %></br>
		<%#= f.text_field :owner_id, :size => '32', :placeholder => "Owner Profile ID" %><br />
	</p>
	<input type="submit" name="commit" value="<%= button %>" class="button large">
<% end %>