    					<div class="details">
    						<h3><%= link_to "#{group.name} - Founded on #{content_tag("span", short_date(group.created_at),:class => "info")}", group_path(group) %></h3>
    						<p class="description">
    						  <%= group.description %>
    						</p>
    					</div>
    				</div>
  				<% end %>
				
  				<div class="see_all">
  				  <%= link_to "See All My? Groups", groups_profile_path(current_profile) %>
  				</div>
  			</div>
		  </div>
		
		
		  <div class="aside">
			<div id="promotions" class="module">
				<h2>Promotions</h2>
				<p class="promo_image"><image src="http://placehold.it/300x150"></p>
			</div>
			<div id="referred_questions" class="module">
				<h2>Referred Questions</h2>
