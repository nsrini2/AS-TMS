<div class="widget">
	<div class="header">
		<h2><%= widget[:title] -%></h2>
	</div>
	<div class="content">
		<% if widget[:internal] -%>
			<%= eval(widget[:url]) -%>
		<% else -%>
			<iframe id="iframe_app_<%=widget[:id]%>" name="iframe_app_<%=widget[:id]%>" src="<%= widget[:url] %>" scrolling="no" frameborder="0"></iframe>
		<% end -%>
	</div>
</div>