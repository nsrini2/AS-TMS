<table id="booth_marketing">
	<tbody>
		<tr>
			<th>Active</th>
			<th>Preview</th>
			<th>Image</th>
			<th>Link</th>
		</tr>
		<% @booth_marketing_messages.each do |marketing_message| -%>
		<tr id="marketing_message_<%= marketing_message.id %>">
			<td><%= link_to_toggle_activation(marketing_message) %></td>
			<td><%= link_to(image_tag(booth_marketing_image_path(marketing_message,:thumbnail), :alt => '', :width => '100', :height => '44'), booth_marketing_image_path(marketing_message), :target => '_blank') -%></td>
			<td>
				<%=link_to_change_image(marketing_message) -%>
			</td>
			<td class="link">
				<%= render_inline_editor_for(marketing_message, :link_to_url, group_booth_marketing_message_path(marketing_message.group,marketing_message ), :tag => :p, :editable => 'true', :tooltip => "Click to edit the link", :placeholder => 'Click to add a link') -%>
			</td>
			<td>
				<%= link_to_remove(marketing_message) -%>
			</td>
		</tr>
		<% end -%>
	</tbody>
</table>
