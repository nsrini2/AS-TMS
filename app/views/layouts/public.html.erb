<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>AgentStream</title>
	<link rel="stylesheet" href="/themes/agentstream/_css/style.css" />
	<style>
	#main { background: #e5f1f4 url('_img/signup_bg.jpg') no-repeat left top;}
	.login-main { float: right; margin: 40px 20px;}
	#main .primary .content {width:960px; border-top: 1px solid #c4d7dc; }
	#main .primary .content .intro-text { clear: both; float:left; width: 350px; margin:60px 20px 20px 40px;}
	#main .primary .content .intro-text h5 {font-size: 32px; line-height: 32px; margin:0; font-weight:normal; color: #6f563b;}
	#main .primary .content .intro-text h1 {font-size: 48px; line-height: 40px; margin:0; color:#4a6970;}
	#main .primary .content .intro-text p {font-size: 12px; line-height: 14pt; margin: 12px 0;}
	#main .primary .content .intro-text li {color:#4a6970;font-weight: bold;}
	#main .primary .content .sign-up { float:right; width: 500px; margin:50px 20px 100px 20px;}
	#footer { clear:both;}
	</style>

</head>
<body>
<div id="page">
	<div id="header">
	  <h1 id="logo"><%= link_to "AgentStream", home_path %></h1>
		
		<div class="login-main">
			<form action="/account/login" accept-charset="utf-8" id="login_form" class="labeless">
				<p>
				  <input type="text" name="login" size="40" placeholder="Login" id="one" />
				  <input type="password" name="password" size="40" placeholder="Password" id="two"/>
			   	<button type="submit">Login</button>
			   	<br/>
			   	<a href="/retrievals/new?forgot=login" tabindex="4">Forgot login?</a>
          <% 66.times do %>&nbsp;<% end %>
			   	<a href="/retrievals/new?forgot=password" tabindex="5">Forgot password?</a>
			  </p>
			</form>
		</div>
	</div>

	<div id="main">
		<div class="primary">
			<div class="content">
        <%= @content_for_content ? yield(:content) : yield %>
      </div>
		</div>
	</div>
	<div id="footer">
	  hehe
	</div>
</div>

<%= javascript_include_merged( :base ) -%>
<script type="text/javascript" charset="utf-8">
  // Use HTML5 placeholders when possible, else us JS to do the same
  function supports_input_placeholder() { var i = document.createElement('input'); return 'placeholder' in i; }
        
  (function($) {  // $ = jQuery within this block
  	$(document).ready(function() {  
  	  
  	  // MM2: Basically recreate the html5 placeholder functionality for browsers that don't
  	  if(!supports_input_placeholder()) {  	  
        var login_inputs = 'form.labeless input:text, form.labeless input:password';

        $(login_inputs).each(function(element) {
          $this = $(this);
          if($this.attr('value') == '') {
            $this.attr('value', $this.attr('placeholder'));
          }
    		}),

        $(login_inputs).live('click', function(event) {
          $this = $(this);
          if($this.attr('value') == $this.attr('placeholder')) {
      		  $this.attr('value','');
      		  return false;
          }
    		}),
		
    		$(login_inputs).bind('blur', function(event) {
    		  $this = $(this);
    		  if($this.attr('value') == '') {
    		    $this.attr('value', $this.attr('placeholder'));
    		  }
    		}); 
		  }
    });
  })(jQuery);
</script>
