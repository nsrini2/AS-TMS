<% content_for :content do -%>

  <% if content_for? :tab_heading %>
    <h2 class="page_title">
      <%= yield :tab_heading %>
    </h2>
  <% end %>

  <% if content_for? :sponsored_group_about %>
     <div class="about">
        <%= yield :sponsored_group_about %>
     </div>
  <% end %>

  <% if content_for? :announcement_panel %>
     <div class="sponsor_group_announcement">
       <%=yield :announcement_panel %>
     </div>
  <% end %>

 <% if content_for? :booth_info_panel %>
     <div class="booth_user_info">
       <%=yield :booth_info_panel %>
     </div>
  <% end %>

  <% if content_for? :booth_social_feeds_panel %>
     <div class="booth_social_feeds">
       <%=yield :booth_social_feeds_panel %>
     </div>
  <% end %>

<% if content_for? :sponsored_group_tabs %>
   <div class="profile">
    <div class="primary <%= "full_length" unless content_for?(:aside) %>">
      <div class="sponsor_tabs"> 
      	<ul class="sponsor_tabs-nav standard">
      		<%= yield :sponsored_group_tabs %>
      	</ul>

        <div class="sponsor_tabs-panel">
          <%= content_for?(:tab_panel) ? yield(:tab_panel) : yield %>
          <div style="clear: both;"></div>
        </div>
      </div>
      
  <% elsif content_for? :tabs %>
   <div class="profile">
    <div class="primary <%= "full_length" unless content_for?(:aside) %>">
      <div class="tabs"> 
      	<ul class="tabs-nav standard">
      		<%= yield :tabs %>
      	</ul>

        <div class="tabs-panel">
          <%= content_for?(:tab_panel) ? yield(:tab_panel) : yield %>
          
          <div style="clear: both;"></div>
        </div>
      </div>
      
      <% if content_for? :post_panel %>
        <div class="post-panel">
          <%#= yield :post_panel %>
        </div>
      <% end %>
    </div>
  
    <% if content_for? :aside %>
      <div class="aside">
      	<%= yield :aside %>
      </div>
    <% end %>

  </div>
<% end %>

<% end %>

<%= render :file => 'layouts/_application' -%>
